<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Relat√≥rio - <%= appName %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        .logo-header { max-height: 60px; width: auto; }
        .header-relatorio {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border-radius: 10px; padding: 20px; margin-bottom: 30px; color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Cabe√ßalho com Logo -->
        <div class="header-relatorio">
            <div class="row align-items-center">
                <div class="col-md-2">
                    <img src="/img/logo.png" alt="Logo do Col√©gio" class="logo-header">
                </div>
                <div class="col-md-10">
                    <h1 class="mb-0">Relat√≥rio de Vota√ß√£o</h1>
                    <p class="mb-0"><%= schoolName %> - <%= appName %></p>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4 no-print">
            <a href="/" class="btn btn-secondary">‚Üê Voltar ao Dashboard</a>
        </div>

        <!-- Resumo Geral -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body text-center">
                        <h4>Total de Projetos</h4>
                        <h2><%= projetos.length %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body text-center">
                        <h4>Total de Votos</h4>
                        <h2><%= totalGeral %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body text-center">
                        <h4>Projeto L√≠der</h4>
                        <h5><%= projetoMaisVotado ? projetoMaisVotado.nome : 'Nenhum voto ainda' %></h5>
                        <h6><%= projetoMaisVotado ? projetoMaisVotado.total_votos + ' votos' : '0 votos' %></h6>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabela de Resultados -->
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">üèÜ Ranking de Projetos</h5>
            </div>
            <div class="card-body">
                <% if (projetos.length === 0) { %>
                    <div class="text-center py-4">
                        <p class="text-muted">Nenhum projeto cadastrado ainda.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Posi√ß√£o</th>
                                    <th>Nome do Projeto</th>
                                    <th>Total de Votos</th>
                                    <th>Percentual</th>
                                    <th class="no-print">A√ß√µes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% 
                                let posicao = 1;
                                projetos.forEach((projeto) => { 
                                    // CORRE√á√ÉO: C√°lculo correto do percentual
                                    let percentualValor = 0;
                                    let percentualTexto = '0%';
                                    
                                    if (totalGeral > 0 && projeto.total_votos > 0) {
                                        percentualValor = (projeto.total_votos / totalGeral) * 100;
                                        percentualTexto = percentualValor.toFixed(1) + '%';
                                    }
                                    
                                    const isWinner = projetoMaisVotado && projeto.id === projetoMaisVotado.id && projeto.total_votos > 0;
                                %>
                                    <tr class="<%= isWinner ? 'table-success' : '' %>">
                                        <td>
                                            <% if (projeto.total_votos > 0) { %>
                                                <span class="badge <%= posicao === 1 && isWinner ? 'winner-badge' : 'bg-secondary' %>">
                                                    #<%= posicao %>
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-light text-dark">
                                                    #<%= posicao %>
                                                </span>
                                            <% } %>
                                        </td>
                                        <td><strong><%= projeto.nome %></strong></td>
                                        <td>
                                            <span class="badge bg-primary"><%= projeto.total_votos || 0 %></span>
                                        </td>
                                        <td>
                                            <% if (totalGeral > 0 && projeto.total_votos > 0) { %>
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" 
                                                         style="width: <%= percentualValor %>%;" 
                                                         aria-valuenow="<%= percentualValor %>" 
                                                         aria-valuemin="0" 
                                                         aria-valuemax="100">
                                                        <%= percentualTexto %>
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">0%</span>
                                            <% } %>
                                        </td>
                                        <td class="no-print">
                                            <div class="btn-group btn-group-sm">
                                                <a href="/resultados/<%= projeto.id %>" class="btn btn-outline-primary">
                                                    Detalhes
                                                </a>
                                                <a href="/imprimir/<%= projeto.id %>" class="btn btn-outline-info">
                                                    Imprimir QR
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% 
                                    posicao++;
                                }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Estat√≠sticas Adicionais -->
        <% if (projetos.length > 0 && totalGeral > 0) { %>
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">üìà Estat√≠sticas</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>M√©dia de votos por projeto:</strong> 
                        <%= (totalGeral / projetos.length).toFixed(1) %>
                    </div>
                    <div class="col-md-6">
                        <strong>Projetos com votos:</strong> 
                        <%= projetos.filter(p => p.total_votos > 0).length %> / <%= projetos.length %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Bot√£o de Impress√£o -->
        <div class="text-center mt-4 no-print">
            <button onclick="window.print()" class="btn btn-success me-2">
                üñ®Ô∏è Imprimir Relat√≥rio
            </button>
            <a href="/" class="btn btn-secondary">Voltar ao Dashboard</a>
        </div>

        <!-- Data do Relat√≥rio -->
        <div class="text-center mt-3">
            <small class="text-muted">
                Relat√≥rio gerado em: <span id="dataRelatorio"></span>
            </small>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Adiciona data atual ao relat√≥rio
        document.getElementById('dataRelatorio').textContent = new Date().toLocaleString('pt-BR');
        
        // Melhora a impress√£o
        window.onbeforeprint = function() {
            document.querySelectorAll('.no-print').forEach(el => {
                el.style.display = 'none';
            });
        };
    </script>
</body>
</html>